{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Contributors",
    "description": "Metadata for contributors, as generated by the all-contributors bot",
    "type": "object",
    "properties": {
        "contributors": {
            "description": "Array of contributor metadata objects",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "login": {
                        "description": "Github username of the contributor",
                        "type": "string"
                    },
                    "name": {
                        "description": "Name of the contributor",
                        "type": "string"
                    },
                    "avatar_url": {
                        "description": "URL of the contributor's avatar image",
                        "type": "string",
                        "format": "uri"
                    },
                    "profile": {
                        "description": "URL of the contributor's profile page or website",
                        "type": "string",
                        "format": "uri"
                    },
                    "contributions": {
                        "description": "Array containing the contributor's contribution types",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "a11y",
                                "audio",
                                "blog",
                                "bug",
                                "business",
                                "code",
                                "content",
                                "data",
                                "design",
                                "doc",
                                "eventOrganizing",
                                "example",
                                "financial",
                                "fundingFinding",
                                "ideas",
                                "infra",
                                "maintenance",
                                "mentoring",
                                "platform",
                                "plugin",
                                "projectManagement",
                                "promotion",
                                "question",
                                "research",
                                "review",
                                "security",
                                "talk",
                                "test",
                                "tool",
                                "translation",
                                "tutorial",
                                "userTesting",
                                "video"
                            ]
                        }
                    }
                }
            }
        }
    }
}